{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@cache/*": ["./cache/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@custom-types/*": ["./types/*"],
      "@database/*": ["./database/*"],
      "@layouts/*": ["./layouts/*"],
      "@sonos/*": ["./sonos/*"],
      "@spotify/*": ["./spotify/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
